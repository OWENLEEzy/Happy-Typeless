# Copy this file to .env and fill in your configuration
# cp .env.example .env

# ── Typeless database path ──────────────────────────────────────────────
# Leave empty for auto-detection (macOS/Windows/Linux standard paths)
# macOS default: ~/Library/Application Support/Typeless/typeless.db
TYPELESS_DB_PATH=

# ── AI provider (primary) ───────────────────────────────────────────────
# Supported: zhipu / deepseek / openai / anthropic / moonshot / alibaba
AI_PRIMARY_PROVIDER=zhipu
AI_PRIMARY_MODEL=glm-4-flash
AI_API_KEY=                        # Required: API key for the primary provider

# ── AI provider (fallback, auto-switch when primary fails) ──────────────
AI_FALLBACK_PROVIDER=deepseek
AI_FALLBACK_MODEL=deepseek-v3      # Model for fallback provider
AI_FALLBACK_API_KEY=               # Optional

# ── Analysis configuration ──────────────────────────────────────────────
AI_MAX_COST_PER_RUN=10.0           # Budget limit per run (CNY)
AI_CONCURRENCY=20                  # Concurrent requests (DeepSeek can use 50)

# ── Report configuration ────────────────────────────────────────────────
REPORT_LANG=zh                     # Report language: en(default) or zh
AUTO_OPEN_REPORT=true              # Auto-open in browser after generation
